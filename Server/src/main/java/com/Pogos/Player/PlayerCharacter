//                ", proffesion=" + proffesion +
//                ", playerName='" + playerName + '\'' +
//                '}';
//    }

    @Override
    public String toString()
    {
        return new String(playerName + " is a noble " + race + " " + proffesion + " who lives their lives " +
                "on the edge of danger and adventure");
    }
}